<UserControl x:Name="userControl" x:Class="Inwardrobe.Views.VariablesBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Inwardrobe.Views"
             mc:Ignorable="d" d:DesignHeight="150" d:DesignWidth="150">
    <StackPanel>
        <TextBlock Text="{Binding NameValue, ElementName=userControl}" Margin= "2 5 2 2"/>
        <TextBox x:Name="Xvalue" Text="100" TextAlignment="Right"/>
    </StackPanel>
</UserControl>
