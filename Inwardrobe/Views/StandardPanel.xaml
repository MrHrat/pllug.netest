        <TextBlock Text="Height:" Margin= "2 5 2 2"/>
        <TextBox x:Name="Sh" Text="310" TextAlignment="Right"/>
        <TextBlock Text="Depth:" Margin= "2 5 2 2"/>
        <TextBox x:Name="Sd" Text="200" TextAlignment="Right"/>
    </StackPanel>
</Controls:MetroContentControl>
